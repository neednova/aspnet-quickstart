<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"] - nova_aspnet_quickstart</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700|Merriweather:300,300i,400,400i,700,700i"
          rel="stylesheet">
    @RenderSection("HeadScripts", false)
</head>
<body>
    <div class="header">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-3 col-xs-6">
                    <div class="logo">
                        <img src="images/logo.png" alt="Borrow - Loan Company Website Template">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="dashboard-nav-bar">
        <div class="container">
            <div class="row">
                <div class="col-md-6 right-align">
                    <a href="/" class="@(Model is IndexModel ? "underlined" : "")">Applicant Loan Page</a>
                </div>
                <div class="col-md-6">
                    <a href="/dashboard" class="@(Model is DashboardModel ? "underlined" : "")">Internal Company Dashboard</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container" style="padding-top: 100px;">
        @RenderBody()
    </div>
    <script src="~/js/jquery.min.js "></script>
    <script src="~/js/bootstrap.min.js "></script>
</body>
</html>
